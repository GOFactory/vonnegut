%% -*- erlang -*-
[{vonnegut, [%%{cluster, local},
             {cluster, {direct, [{'chain1-0', "127.0.0.1", 5555},
                                 {'chain1-1', "127.0.0.1", 5556},
                                 {'chain1-2', "127.0.0.1", 5557}]}},
             {client, [{endpoints, [{"127.0.0.1", 5555}]}]},
             {log_dirs, ["${LOG_DIR}"]},
             {replicas, "3"},
             {port, "${PORT}"}]},

 {kernel, [{start_time, true}]},

 {lager, [{colored, true},
          {lager_console_backend, [info, {lager_default_formatter,
                                          [time, color, " [",severity,"] ", "mod=", module,
                                           " fun=", function, " ", message, "\e[0m\r\n"]}]}]}
].
