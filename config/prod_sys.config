[{vonnegut, [{chain, [{name, "${CHAIN_NAME}"},

                      {discovery, {srv, "${DISCOVERY_DOMAIN}"}},

                      %% with direct we do not need to set the # replicas expected
                      {replicas, "${REPLICAS}"},
                      {port, 5555}]}
             ]},

 {partisan, [{peer_ip, "${PEER_IP}"},
             {peer_port, 10200},
             {partisan_peer_service_manager,
              partisan_default_peer_service_manager}]},

 {kernel, [{start_time, true}]},

 {opencensus, [{reporter, {oc_noop_reporter, #{project => <<"nucleus-sti">>,
                                               service_account => <<"default">>}}}]},

 {lager, [{handlers,
           [{lager_console_backend,
             [{level, info},
              {formatter, lager_default_formatter},
              {formatter_config,
               [time, color, " [",severity,"] ",
                pid, " ",
                "mod=", module,
                " fun=", function, " ", message, "\e[0m\r\n"]}]}]}]},

 "config/shared"
].
